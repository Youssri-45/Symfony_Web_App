{% extends ':base_front:login-page.html.twig' %}

{% block login %}
    {{ form_start(form) }}
    <div class="form-group">
        {{ form_row(form._username) }}
    </div>
    <div class="form-group">
        {{ form_row((form._password)) }}
    </div>
    <div class="form-group">
        <button type="submit" id="button" name="button" class="btn tp-btn tp-btn-orange">Submit</button>
    </div>
    {{ form_end(form) }}


{% endblock %}

{% block errors %}
    {% if error %}
        <div class="alert alert-danger" role="alert">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
{% endblock %}

