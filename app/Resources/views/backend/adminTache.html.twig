{% extends 'base_back_admin.html.twig' %}
        {% block body %}
            <div class="right_col" role="main">
            <div class="">
                <div class="page-title">
                    <div class="title_left">
                        <h3>Taches</h3>
                    </div>

                </div>

                <div class="clearfix"></div>

                <div class="">
                    <div class="col-md-12 col-sm-12 col-xs-12">
                        <div class="x_panel">
                            <div class="x_title">
                                <h2><i class="fa fa-bars"></i> Taches</h2>
                                <ul class="nav navbar-right panel_toolbox">
                                    <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                                    </li>
                                    <li class="dropdown">
                                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button"
                                           aria-expanded="false"><i class="fa fa-wrench"></i></a>
                                        <ul class="dropdown-menu" role="menu">
                                            <li><a href="#">Settings 1</a>
                                            </li>
                                            <li><a href="#">Settings 2</a>
                                            </li>
                                        </ul>
                                    </li>
                                    <li><a class="close-link"><i class="fa fa-close"></i></a>
                                    </li>
                                </ul>
                                <div class="clearfix"></div>
                            </div>
                            <div class="x_content">



                                    <div id="myTabContent" class="tab-content">
                                        <div role="tabpanel" class="tab-pane fade active in" id="tab_content1"
                                             aria-labelledby="home-tab">
                                            <table class="table">
                                                <thead>
                                                <tr>
                                                    <th>
                                                        Nom Tache
                                                    </th>
                                                    <th>
                                                        Nom Client
                                                    </th>
                                                    <th>
                                                        Nom Employer
                                                    </th>
                                                    <th>
                                                        Description
                                                    </th>
                                                    <th>
                                                        Resolu
                                                    </th>
                                                </tr>
                                                </thead>
                                                <tbody>
                                                {% for tache in taches %}
                                                    <tr>
                                                        <td>
                                                            {{ tache.nomTache |capitalize}}
                                                        </td>
                                                        <td>
                                                            {{ tache.client.prenom|capitalize }} {{ tache.client.nom |capitalize }}
                                                        </td>
                                                        <td>
                                                            {{ tache.employer.prenom|capitalize }} {{ tache.employer.nom |capitalize }}
                                                        </td>
                                                        <td>
                                                            {{ tache.description |length > 50 ? tache.description|capitalize|slice(0, 50) ~ '...' : tache.description |capitalize }}
                                                        </td>
                                                        <td>
                                                            {% if tache.isresolved == 0 %}
                                                            {{ "Non" }}
                                                            {% else %}
                                                            {{ "Oui" }}
                                                            {% endif %}
                                                        </td>
                                                    </tr>
                                                {% endfor %}
                                                </tbody>
                                            </table>
                                        </div>


                                </div>

                            </div>
                        </div>
                    </div>


                </div>
                <div class="clearfix"></div>
            </div>
        {% endblock %}