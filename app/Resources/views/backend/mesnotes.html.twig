{% extends 'base_back.html.twig' %}
        {% block body %}
            <div class="right_col" role="main">
            <div class="">
                <div class="page-title">
                    <div class="title_left">
                        <h3>Mes Notes</h3>
                    </div>

                </div>

                <div class="clearfix"></div>

                <div class="">
                    <div class="col-md-12 col-sm-12 col-xs-12">
                        <div class="x_panel">
                            <div class="x_title">
                                <h2><i class="fa fa-bars"></i> Mes Notes</h2>
                                <ul class="nav navbar-right panel_toolbox">
                                    <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                                    </li>
                                    <li class="dropdown">
                                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button"
                                           aria-expanded="false"><i class="fa fa-wrench"></i></a>
                                        <ul class="dropdown-menu" role="menu">
                                            <li><a href="#">Settings 1</a>
                                            </li>
                                            <li><a href="#">Settings 2</a>
                                            </li>
                                        </ul>
                                    </li>
                                    <li><a class="close-link"><i class="fa fa-close"></i></a>
                                    </li>
                                </ul>
                                <div class="clearfix"></div>
                            </div>
                            <div class="x_content">


                                <div class="" role="tabpanel" data-example-id="togglable-tabs">
                                    <ul id="myTab" class="nav nav-tabs bar_tabs" role="tablist">
                                        <li role="presentation" class="active"><a href="#tab_content1" id="home-tab"
                                                                                  role="tab" data-toggle="tab"
                                                                                  aria-expanded="true">Clients</a>
                                        </li>
                                        <li role="presentation" class=""><a href="#tab_content2" role="tab"
                                                                            id="profile-tab" data-toggle="tab"
                                                                            aria-expanded="false">Employés</a>
                                        </li>
                                    </ul>
                                    <div id="myTabContent" class="tab-content">
                                        <div role="tabpanel" class="tab-pane fade active in" id="tab_content1"
                                             aria-labelledby="home-tab">
                                            <table class="table">
                                                <thead>
                                                <tr>
                                                    <th>
                                                        Nom Client
                                                    </th>
                                                    <th>
                                                        Nom Tache
                                                    </th>
                                                    <th>
                                                        Description
                                                    </th>
                                                    <th>
                                                        Note
                                                    </th>
                                                </tr>
                                                </thead>
                                                <tbody>
                                                {% for note in noteClients %}
                                                    <tr>
                                                        <td>
                                                            {{ note.client.prenom|capitalize }} {{ note.client.nom |capitalize }}
                                                        </td>
                                                        <td>
                                                            {% if note.tache %}
                                                                {{ note.tache.nomTache }}
                                                            {% else %}
                                                                null
                                                            {% endif %}
                                                        </td>
                                                        <td>
                                                            {% if note.tache %}
                                                                {{ note.tache.description |length > 50 ? note.tache.description|capitalize|slice(0, 50) ~ '...' : note.tache.description |capitalize }}
                                                            {% else %}
                                                                null
                                                            {% endif %}
                                                        </td>
                                                        <td>
                                                            {{ note.note | round(1,'floor')}}
                                                        </td>
                                                    </tr>
                                                {% endfor %}
                                                </tbody>
                                            </table>
                                        </div>
                                        <div role="tabpanel" class="tab-pane fade" id="tab_content2"
                                             aria-labelledby="profile-tab">
                                            <table class="table">
                                                <thead>
                                                <tr>
                                                    <th>
                                                        Nom Employé
                                                    </th>
                                                    <th>
                                                        Note
                                                    </th>
                                                </tr>
                                                </thead>
                                                <tbody>
                                                {% for note in noteEmployes %}
                                                    <tr>
                                                        <td>
                                                            {{ note.employerNotant.prenom|capitalize }} {{ note.EmployerNotant.nom |capitalize }}
                                                        </td>
                                                        <td>
                                                            {{ note.note | round(1,'floor')}}
                                                        </td>
                                                    </tr>
                                                {% endfor %}
                                                </tbody>
                                            </table>
                                        </div>

                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>


                </div>
                <div class="clearfix"></div>
            </div>
        {% endblock %}